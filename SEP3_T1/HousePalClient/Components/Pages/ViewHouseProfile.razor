@page "/view-house-profile/{profileId:int}"
@using DTOs.HouseProfile
@using HousePalClient.Components.Layout
@using Microsoft.AspNetCore.Components
@using Services
@layout LoginLayout
@inject NavigationManager Navigation
@inject IHouseProfileService HouseProfileService
@rendermode InteractiveServer

<h1>House Profile Details</h1>

<div class="profile-container">
    @if (houseProfile == null)
    {
        <p>Loading house profile details...</p>
    }
    else
    {
        <div class="house-profile-details">
            @if (houseProfile.Pictures != null && houseProfile.Pictures.Any())
            {
                <img src="@houseProfile.Pictures.First()" alt="House Picture" class="profile-img" />
            }
            <h2>@houseProfile.Description</h2>
            <p><strong>City:</strong> @houseProfile.City</p>
            <p><strong>Region:</strong> @houseProfile.Region</p>
            <p><strong>Address:</strong> @houseProfile.Address</p>
            <p><strong>Amenities:</strong> @string.Join(", ", houseProfile.Amenities)</p>
            <p><strong>Chores:</strong> @string.Join(", ", houseProfile.Chores)</p>
            <p><strong>Rules:</strong> @string.Join(", ", houseProfile.Rules)</p>
            <button class="btn-edit" @onclick="EditHouseProfile">Edit House Profile</button>
            @* <button class="btn-delete" @onclick="DeleteProfile">Delete House Profile</button> *@
        </div>
    }
</div>

<style>
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 2em;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 2em auto;
    }

    .profile-img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 1em;
    }

    h1, h2 {
        text-align: center;
        color: #ff7e5f;
        font-family: 'LogoFont', sans-serif;
    }

    p {
        font-family: Futura;
        color: #3d3d3d;
    }

    .house-profile-details p {
        margin: 0.5em 0;
    }
</style>

@code {
    [Parameter]
    public int profileId { get; set; } 

    private HouseProfileDto houseProfile;

    private void EditHouseProfile()
    {
        Navigation.NavigateTo($"/edit-house-profile/{profileId}");
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadHouseProfile();
    }

    private async Task LoadHouseProfile()
    {
        houseProfile = await HouseProfileService.GetSingleAsync(profileId, false); 
    }
}
