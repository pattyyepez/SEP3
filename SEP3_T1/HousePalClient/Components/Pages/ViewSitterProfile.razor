    }

    @@font-face {
        font-family: 'FuturaFont';
        src: url('fonts/futura.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    
    h3 {
        font-family: 'LogoFont', sans-serif;
        color: #3d3d3d;
    }

    .carousel-container {
        margin-bottom: 2em;
    }

    .carousel img { 
        max-height: 32em; 
        object-fit: cover; 
        border-radius: 10px; 
