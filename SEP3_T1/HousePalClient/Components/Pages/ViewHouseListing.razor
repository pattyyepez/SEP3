    private List<string> Images = new List<string>
    {
        "/images/loginBackgrounds/1.jpg",
        "/images/loginBackgrounds/2.jpg",
        "/images/loginBackgrounds/3.jpg", 
        "/images/loginBackgrounds/4.jpg"
    };
}
